@model IEnumerable<HealthcareSystem.Models.Prescription>
@{
    ViewData["Title"] = "My Prescriptions";
    var patient = ViewBag.Patient as HealthcareSystem.Models.Patient;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-info mb-0"><i class="bi bi-prescription me-2"></i>My Prescriptions</h2>
            <p class="text-muted mb-0">View all your prescribed medications</p>
        </div>
        <a asp-controller="Home" asp-action="PatientDashboard" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Active Prescriptions -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-capsule me-2"></i>Prescriptions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var prescription in Model)
                    {
                        <div class="col-lg-6 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title text-info mb-0">
                                            <i class="bi bi-capsule me-2"></i>@prescription.MedicineName
                                        </h5>
                                        <span class="badge bg-secondary">
                                            @prescription.PrescriptionDate.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                    <p class="text-muted mb-2">
                                        <small>Prescribed by Dr. @prescription.Doctor?.FirstName @prescription.Doctor?.LastName</small>
                                    </p>
                                    <hr>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Dosage</small>
                                            <p class="mb-0 fw-bold">@prescription.Dosage</p>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Duration</small>
                                            <p class="mb-0 fw-bold">@prescription.Duration</p>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(prescription.Instructions))
                                    {
                                        <div class="mt-3">
                                            <small class="text-muted">Instructions</small>
                                            <p class="mb-0">@prescription.Instructions</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@prescription.Id" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                        <a asp-action="Print" asp-route-id="@prescription.Id" 
                                           class="btn btn-outline-secondary btn-sm" target="_blank">
                                            <i class="bi bi-printer me-1"></i>Print
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-prescription fs-1 text-muted"></i>
                <h5 class="mt-3">No Prescriptions</h5>
                <p class="text-muted">You don't have any prescriptions yet.</p>
                <a asp-controller="MedicalRecord" asp-action="MyRecords" class="btn btn-info">
                    <i class="bi bi-file-medical me-2"></i>View Medical Records
                </a>
            </div>
        </div>
    }
</div>
