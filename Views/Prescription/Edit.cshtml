@model HealthcareSystem.Models.Prescription
@{
    ViewData["Title"] = "Edit Prescription";
    var record = ViewBag.Record as HealthcareSystem.Models.MedicalRecord;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Prescription</h4>
            </div>
            <div class="card-body p-4">
                <!-- Patient Info -->
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="mb-1"><i class="bi bi-person me-2"></i>Patient</h6>
                            <strong>@Model.Patient?.FirstName @Model.Patient?.LastName</strong>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-1"><i class="bi bi-calendar me-2"></i>Prescription Date</h6>
                            <strong>@Model.PrescriptionDate.ToString("MMMM dd, yyyy")</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="MedicalRecordId" />
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="DoctorId" />
                    <input type="hidden" asp-for="PrescriptionDate" />

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="MedicineName" class="form-label">Medicine Name *</label>
                            <input asp-for="MedicineName" class="form-control" required />
                            <span asp-validation-for="MedicineName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Dosage" class="form-label">Dosage *</label>
                            <input asp-for="Dosage" class="form-control" required />
                            <span asp-validation-for="Dosage" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Duration" class="form-label">Duration *</label>
                            <input asp-for="Duration" class="form-control" required />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Instructions" class="form-label">Special Instructions</label>
                        <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Instructions" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Details
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
