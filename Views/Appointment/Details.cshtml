@model HealthcareSystem.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
    var role = Context.Session.GetString("Role");
    var isDoctor = role == "Doctor";
    var isAdmin = role == "Admin";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @if (isAdmin)
                    {
                        <li class="breadcrumb-item"><a asp-action="Index">Appointments</a></li>
                    }
                    else if (isDoctor)
                    {
                        <li class="breadcrumb-item"><a asp-controller="Doctor" asp-action="Dashboard">My Appointments</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="PatientDashboard">Dashboard</a></li>
                    }
                    <li class="breadcrumb-item active">Appointment Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Appointment Info Card -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                @{
                    var headerClass = Model.Status switch
                    {
                        "Scheduled" => "bg-warning text-dark",
                        "Completed" => "bg-success text-white",
                        "Cancelled" => "bg-danger text-white",
                        _ => "bg-secondary text-white"
                    };
                }
                <div class="card-header @headerClass">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-event me-2"></i>
                        Appointment - @Model.Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-calendar-check display-4 text-info"></i>
                        <h4 class="mt-3">@Model.AppointmentDate.ToString("dddd")</h4>
                        <h2 class="text-primary">@Model.AppointmentDate.ToString("MMMM dd, yyyy")</h2>
                        <h3 class="text-muted">@Model.AppointmentDate.ToString("hh:mm tt")</h3>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block">Status</small>
                        @{
                            var badgeClass = Model.Status switch
                            {
                                "Scheduled" => "bg-warning text-dark",
                                "Completed" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass fs-6">@Model.Status</span>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block">Created On</small>
                        <strong>@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</strong>
                    </div>
                </div>
                
                @if (isAdmin || (isDoctor && Model.Status == "Scheduled"))
                {
                    <div class="card-footer">
                        @if (isAdmin)
                        {
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil me-2"></i>Edit Appointment
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="bi bi-trash me-2"></i>Delete
                                    </button>
                                </form>
                            </div>
                        }
                        @if (isDoctor && Model.Status == "Scheduled")
                        {
                            <div class="d-grid gap-2">
                                <a asp-controller="MedicalRecord" asp-action="Create" asp-route-appointmentId="@Model.Id" 
                                   class="btn btn-success">
                                    <i class="bi bi-file-medical me-2"></i>Create Medical Record
                                </a>
                                <form asp-controller="Appointment" asp-action="Complete" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-check-circle me-2"></i>Mark as Completed
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Details Column -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Patient Info -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-person me-2"></i>Patient Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-circle bg-primary text-white me-3">
                                    @Model.Patient?.FirstName?.Substring(0, 1)@Model.Patient?.LastName?.Substring(0, 1)
                                </div>
                                <div>
                                    <h5 class="mb-0">@Model.Patient?.FirstName @Model.Patient?.LastName</h5>
                                    <small class="text-muted">@Model.Patient?.User?.Email</small>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Phone</small><br>
                                    <strong>@(Model.Patient?.Phone ?? "N/A")</strong>
                                </div>
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Blood Group</small><br>
                                    @if (!string.IsNullOrEmpty(Model.Patient?.BloodGroup))
                                    {
                                        <span class="badge bg-danger">@Model.Patient.BloodGroup</span>
                                    }
                                    else
                                    {
                                        <strong>N/A</strong>
                                    }
                                </div>
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Gender</small><br>
                                    <strong>@(Model.Patient?.Gender ?? "N/A")</strong>
                                </div>
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Age</small><br>
                                    <strong>@(Model.Patient != null ? (DateTime.Now.Year - Model.Patient.DateOfBirth.Year) : 0) years</strong>
                                </div>
                            </div>
                            @if (isDoctor || isAdmin)
                            {
                                <div class="mt-3">
                                    <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>View Full Profile
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Doctor Info -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-heart-pulse me-2"></i>Doctor Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-circle bg-success text-white me-3">
                                    @Model.Doctor?.FirstName?.Substring(0, 1)@Model.Doctor?.LastName?.Substring(0, 1)
                                </div>
                                <div>
                                    <h5 class="mb-0">Dr. @Model.Doctor?.FirstName @Model.Doctor?.LastName</h5>
                                    <span class="badge bg-info">@Model.Doctor?.Specialization</span>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Email</small><br>
                                    <strong>@(Model.Doctor?.Email ?? "N/A")</strong>
                                </div>
                                <div class="col-6 mb-2">
                                    <small class="text-muted">Phone</small><br>
                                    <strong>@(Model.Doctor?.Phone ?? "N/A")</strong>
                                </div>
                                <div class="col-12 mb-2">
                                    <small class="text-muted">Consultation Fee</small><br>
                                    <strong class="text-success fs-5">$@Model.Doctor?.ConsultationFee.ToString("F2")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reason and Notes -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Appointment Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Reason for Visit</h6>
                            <p>@(Model.Reason ?? "Not specified")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Additional Notes</h6>
                            <p>@(Model.Notes ?? "No additional notes")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Medical Record (if exists) -->
            @if (Model.MedicalRecord != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-file-medical me-2"></i>Medical Record</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <h6 class="text-muted">Symptoms</h6>
                                <p>@(Model.MedicalRecord.Symptoms ?? "N/A")</p>
                            </div>
                            <div class="col-md-4 mb-3">
                                <h6 class="text-muted">Diagnosis</h6>
                                <p>@(Model.MedicalRecord.Diagnosis ?? "N/A")</p>
                            </div>
                            <div class="col-md-4 mb-3">
                                <h6 class="text-muted">Treatment</h6>
                                <p>@(Model.MedicalRecord.Treatment ?? "N/A")</p>
                            </div>
                        </div>
                        <a asp-controller="MedicalRecord" asp-action="Details" asp-route-id="@Model.MedicalRecord.Id" 
                           class="btn btn-info">
                            <i class="bi bi-eye me-2"></i>View Full Record
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        font-weight: bold;
    }
</style>
