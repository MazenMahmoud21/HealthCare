@model IEnumerable<HealthcareSystem.Models.Appointment>
@{
    ViewData["Title"] = "Appointment Management";
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title mb-1">Appointments</h1>
            <p class="page-subtitle mb-0">View and manage all appointments</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Calendar" class="btn btn-outline-primary">
                <i class="fas fa-calendar-alt me-1"></i> Calendar View
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> New Appointment
            </a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body py-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-4 col-lg-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search appointments...">
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <input type="date" class="form-control" id="dateFilter">
                </div>
                <div class="col-auto">
                    <button class="btn btn-ghost" id="clearFilters">
                        <i class="fas fa-times me-1"></i> Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    @{
        var totalAppointments = Model?.Count() ?? 0;
        var scheduledCount = Model?.Count(a => a.Status == "Scheduled") ?? 0;
        var completedCount = Model?.Count(a => a.Status == "Completed") ?? 0;
        var cancelledCount = Model?.Count(a => a.Status == "Cancelled") ?? 0;
    }
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Total</p>
                        <h3 class="stat-value mb-0">@totalAppointments</h3>
                    </div>
                    <div class="stat-icon" style="background: #E0E7FF; color: #4F46E5;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Scheduled</p>
                        <h3 class="stat-value mb-0">@scheduledCount</h3>
                    </div>
                    <div class="stat-icon" style="background: #FEF3C7; color: #D97706;">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Completed</p>
                        <h3 class="stat-value mb-0">@completedCount</h3>
                    </div>
                    <div class="stat-icon" style="background: #D1FAE5; color: #059669;">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Cancelled</p>
                        <h3 class="stat-value mb-0">@cancelledCount</h3>
                    </div>
                    <div class="stat-icon" style="background: #FEE2E2; color: #DC2626;">
                        <i class="fas fa-times-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="appointmentsTable">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Specialization</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.OrderByDescending(a => a.AppointmentDate))
                            {
                                <tr data-status="@appointment.Status" data-date="@appointment.AppointmentDate.ToString("yyyy-MM-dd")">
                                    <td>
                                        <div class="fw-semibold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@appointment.AppointmentDate.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-2" style="background: #E0E7FF; color: #4F46E5;">
                                                @appointment.Patient?.FirstName?.Substring(0,1)@appointment.Patient?.LastName?.Substring(0,1)
                                            </div>
                                            <a asp-controller="Patient" asp-action="Details" asp-route-id="@appointment.PatientId" 
                                               class="text-decoration-none fw-medium">
                                                @appointment.Patient?.FirstName @appointment.Patient?.LastName
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-controller="Doctor" asp-action="Details" asp-route-id="@appointment.DoctorId"
                                           class="text-decoration-none">
                                            Dr. @appointment.Doctor?.FirstName @appointment.Doctor?.LastName
                                        </a>
                                    </td>
                                    <td><span class="badge bg-info">@appointment.Doctor?.Specialization</span></td>
                                    <td>
                                        <span class="text-muted">@(appointment.Reason?.Length > 25 ? appointment.Reason.Substring(0, 25) + "..." : appointment.Reason ?? "â€”")</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = appointment.Status switch
                                            {
                                                "Scheduled" => "status-scheduled",
                                                "Completed" => "status-completed",
                                                "Cancelled" => "status-cancelled",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@appointment.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-1">
                                            <a asp-action="Details" asp-route-id="@appointment.Id" 
                                               class="btn btn-sm btn-ghost" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@appointment.Id" 
                                               class="btn btn-sm btn-ghost" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" 
                                                  style="display:inline;" 
                                                  onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-ghost text-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-transparent border-top">
                    <span class="text-muted small">Showing <span id="visibleCount">@Model.Count()</span> of @Model.Count() appointments</span>
                </div>
            }
            else
            {
                <div class="empty-state py-5">
                    <i class="fas fa-calendar-times"></i>
                    <h5>No Appointments Found</h5>
                    <p>There are no appointments in the system yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Create First Appointment
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const dateFilter = document.getElementById('dateFilter');
            const clearFilters = document.getElementById('clearFilters');
            const table = document.getElementById('appointmentsTable');
            
            if (!table) return;
            
            const rows = table.querySelectorAll('tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const status = statusFilter.value;
                const date = dateFilter.value;
                let visibleCount = 0;

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const rowStatus = row.dataset.status;
                    const rowDate = row.dataset.date;

                    const matchesSearch = text.includes(searchTerm);
                    const matchesStatus = !status || rowStatus === status;
                    const matchesDate = !date || rowDate === date;

                    if (matchesSearch && matchesStatus && matchesDate) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                document.getElementById('visibleCount').textContent = visibleCount;
            }

            searchInput.addEventListener('input', filterTable);
            statusFilter.addEventListener('change', filterTable);
            dateFilter.addEventListener('change', filterTable);
            
            clearFilters.addEventListener('click', function() {
                searchInput.value = '';
                statusFilter.value = '';
                dateFilter.value = '';
                filterTable();
            });
        });
    </script>
}
