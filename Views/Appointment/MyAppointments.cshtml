@model IEnumerable<HealthcareSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title mb-1">My Appointments</h1>
            <p class="page-subtitle mb-0">View all your scheduled appointments</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Book Appointment
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <div class="card mb-4">
        <div class="card-body p-0">
            <ul class="nav nav-tabs border-0 px-3 pt-3" id="appointmentTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                        All <span class="badge bg-secondary ms-1">@Model.Count()</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button">
                        Upcoming <span class="badge bg-primary ms-1">@Model.Count(a => a.Status == "Scheduled" && a.AppointmentDate >= DateTime.Now)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button">
                        Completed <span class="badge bg-success ms-1">@Model.Count(a => a.Status == "Completed")</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button">
                        Cancelled <span class="badge bg-danger ms-1">@Model.Count(a => a.Status == "Cancelled")</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="tab-content" id="appointmentTabsContent">
            <!-- All Appointments -->
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model)
            </div>
            
            <!-- Upcoming -->
            <div class="tab-pane fade" id="upcoming" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Scheduled" && a.AppointmentDate >= DateTime.Now))
            </div>
            
            <!-- Completed -->
            <div class="tab-pane fade" id="completed" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Completed"))
            </div>
            
            <!-- Cancelled -->
            <div class="tab-pane fade" id="cancelled" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Cancelled"))
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="empty-state py-5">
                    <i class="fas fa-calendar-times"></i>
                    <h5>No Appointments</h5>
                    <p>You haven't scheduled any appointments yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Book Your First Appointment
                    </a>
                </div>
            </div>
        </div>
    }
</div>
