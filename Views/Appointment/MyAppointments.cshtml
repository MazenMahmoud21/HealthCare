@model IEnumerable<HealthcareSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-0"><i class="bi bi-calendar2-check me-2"></i>My Appointments</h2>
            <p class="text-muted mb-0">View all your scheduled appointments</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Book New Appointment
        </a>
    </div>

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4" id="appointmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                All <span class="badge bg-secondary">@Model.Count()</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button">
                Upcoming <span class="badge bg-primary">@Model.Count(a => a.Status == "Scheduled" && a.AppointmentDate >= DateTime.Now)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button">
                Completed <span class="badge bg-success">@Model.Count(a => a.Status == "Completed")</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button">
                Cancelled <span class="badge bg-danger">@Model.Count(a => a.Status == "Cancelled")</span>
            </button>
        </li>
    </ul>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="tab-content" id="appointmentTabsContent">
            <!-- All Appointments -->
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model)
            </div>
            
            <!-- Upcoming -->
            <div class="tab-pane fade" id="upcoming" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Scheduled" && a.AppointmentDate >= DateTime.Now))
            </div>
            
            <!-- Completed -->
            <div class="tab-pane fade" id="completed" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Completed"))
            </div>
            
            <!-- Cancelled -->
            <div class="tab-pane fade" id="cancelled" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Cancelled"))
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x fs-1 text-muted"></i>
                <h5 class="mt-3">No Appointments</h5>
                <p class="text-muted">You haven't scheduled any appointments yet.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Book Your First Appointment
                </a>
            </div>
        </div>
    }
</div>
