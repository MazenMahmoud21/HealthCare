@model HealthcareSystem.Models.MedicalRecord
@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Medical Record</h4>
            </div>
            <div class="card-body p-4">
                <!-- Patient Info -->
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="mb-1"><i class="bi bi-person me-2"></i>Patient</h6>
                            <strong>@Model.Patient?.FirstName @Model.Patient?.LastName</strong>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-1"><i class="bi bi-calendar me-2"></i>Visit Date</h6>
                            <strong>@Model.VisitDate.ToString("MMMM dd, yyyy HH:mm")</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="AppointmentId" />
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="DoctorId" />
                    <input type="hidden" asp-for="VisitDate" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="mb-3">
                        <label asp-for="Symptoms" class="form-label">
                            <i class="bi bi-activity me-1"></i>Symptoms / Patient Complaints *
                        </label>
                        <textarea asp-for="Symptoms" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Diagnosis" class="form-label">
                            <i class="bi bi-clipboard2-pulse me-1"></i>Diagnosis *
                        </label>
                        <textarea asp-for="Diagnosis" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Treatment" class="form-label">
                            <i class="bi bi-bandaid me-1"></i>Treatment Plan *
                        </label>
                        <textarea asp-for="Treatment" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Treatment" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label">
                            <i class="bi bi-journal-text me-1"></i>Additional Notes
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Details
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
