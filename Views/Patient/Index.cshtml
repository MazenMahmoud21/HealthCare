@model IEnumerable<HealthcareSystem.Models.Patient>
@{
    ViewData["Title"] = "Patient Management";
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title mb-1">Patients</h1>
            <p class="page-subtitle mb-0">Manage all registered patients</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i> Add Patient
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body py-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-4 col-lg-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search patients...">
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <select class="form-select" id="bloodGroupFilter">
                        <option value="">All Blood Groups</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <select class="form-select" id="genderFilter">
                        <option value="">All Genders</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="patientsTable">
                        <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Date of Birth</th>
                                <th>Gender</th>
                                <th>Blood Group</th>
                                <th>Registered</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-2" style="background: #E0E7FF; color: #4F46E5;">
                                                @patient.FirstName?.Substring(0, 1)@patient.LastName?.Substring(0, 1)
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@patient.FirstName @patient.LastName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted">@patient.User?.Email</td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.DateOfBirth.ToString("MMM dd, yyyy")</td>
                                    <td>@patient.Gender</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(patient.BloodGroup))
                                        {
                                            <span class="badge bg-danger">@patient.BloodGroup</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">â€”</span>
                                        }
                                    </td>
                                    <td class="text-muted">@patient.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-1">
                                            <a asp-action="Details" asp-route-id="@patient.Id" 
                                               class="btn btn-sm btn-ghost" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="Appointment" asp-action="Create" asp-route-patientId="@patient.Id"
                                               class="btn btn-sm btn-ghost text-success" title="Book Appointment">
                                                <i class="fas fa-calendar-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-transparent border-top">
                    <span class="text-muted small">Showing <span id="visibleCount">@Model.Count()</span> of @Model.Count() patients</span>
                </div>
            }
            else
            {
                <div class="empty-state py-5">
                    <i class="fas fa-users"></i>
                    <h5>No Patients Found</h5>
                    <p>There are no registered patients in the system yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-user-plus me-1"></i> Add First Patient
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const bloodGroupFilter = document.getElementById('bloodGroupFilter');
            const genderFilter = document.getElementById('genderFilter');
            const table = document.getElementById('patientsTable');
            
            if (!table) return;
            
            const rows = table.querySelectorAll('tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const bloodGroup = bloodGroupFilter.value;
                const gender = genderFilter.value;
                let visibleCount = 0;

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const rowBloodGroup = row.cells[5]?.textContent.trim();
                    const rowGender = row.cells[4]?.textContent.trim();

                    const matchesSearch = text.includes(searchTerm);
                    const matchesBloodGroup = !bloodGroup || rowBloodGroup === bloodGroup;
                    const matchesGender = !gender || rowGender === gender;

                    if (matchesSearch && matchesBloodGroup && matchesGender) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                document.getElementById('visibleCount').textContent = visibleCount;
            }

            searchInput.addEventListener('input', filterTable);
            bloodGroupFilter.addEventListener('change', filterTable);
            genderFilter.addEventListener('change', filterTable);
        });
    </script>
}
