@model IEnumerable<HealthcareSystem.Models.Patient>
@{
    ViewData["Title"] = "Patient Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-0"><i class="bi bi-people me-2"></i>Patient Management</h2>
            <p class="text-muted mb-0">Manage all registered patients in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Add New Patient
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search patients...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="bloodGroupFilter">
                        <option value="">All Blood Groups</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="genderFilter">
                        <option value="">All Genders</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="patientsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Patient Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Date of Birth</th>
                                <th>Gender</th>
                                <th>Blood Group</th>
                                <th>Registered</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @patient.FirstName?.Substring(0, 1)@patient.LastName?.Substring(0, 1)
                                            </div>
                                            <div>
                                                <strong>@patient.FirstName @patient.LastName</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@patient.User?.Email</td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.DateOfBirth.ToString("MMM dd, yyyy")</td>
                                    <td>@patient.Gender</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(patient.BloodGroup))
                                        {
                                            <span class="badge bg-danger">@patient.BloodGroup</span>
                                        }
                                    </td>
                                    <td>@patient.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@patient.Id" 
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Appointment" asp-action="Create" asp-route-patientId="@patient.Id"
                                               class="btn btn-sm btn-outline-success" title="Book Appointment">
                                                <i class="bi bi-calendar-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="text-muted">Showing <span id="visibleCount">@Model.Count()</span> of @Model.Count() patients</span>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people fs-1 text-muted"></i>
                    <h5 class="mt-3">No Patients Found</h5>
                    <p class="text-muted">There are no registered patients in the system yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-person-plus me-2"></i>Add First Patient
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: bold;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const bloodGroupFilter = document.getElementById('bloodGroupFilter');
            const genderFilter = document.getElementById('genderFilter');
            const table = document.getElementById('patientsTable');
            
            if (!table) return;
            
            const rows = table.querySelectorAll('tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const bloodGroup = bloodGroupFilter.value;
                const gender = genderFilter.value;
                let visibleCount = 0;

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const rowBloodGroup = row.cells[5]?.textContent.trim();
                    const rowGender = row.cells[4]?.textContent.trim();

                    const matchesSearch = text.includes(searchTerm);
                    const matchesBloodGroup = !bloodGroup || rowBloodGroup === bloodGroup;
                    const matchesGender = !gender || rowGender === gender;

                    if (matchesSearch && matchesBloodGroup && matchesGender) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                document.getElementById('visibleCount').textContent = visibleCount;
            }

            searchInput.addEventListener('input', filterTable);
            bloodGroupFilter.addEventListener('change', filterTable);
            genderFilter.addEventListener('change', filterTable);
        });
    </script>
}
