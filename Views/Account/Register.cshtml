@model RegisterDto
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="auth-page">
    <div class="auth-container auth-container-lg">
        <div class="auth-card">
            <!-- Logo/Brand -->
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-hospital"></i>
                </div>
                <h1 class="auth-title">Create your account</h1>
                <p class="auth-subtitle">Join Egypt's trusted healthcare platform</p>
            </div>

            <form asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Account Section -->
                <div class="form-section">
                    <h6 class="form-section-title">Account Information</h6>
                    
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="mazen.mahmoud@example.eg" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Personal Section -->
                <div class="form-section">
                    <h6 class="form-section-title">Personal Details</h6>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Mazen" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Mahmoud" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Select gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="+20 10 1234 5678" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Create Account
                </button>

                <p class="auth-footer">
                    Already have an account? <a asp-action="Login">Sign in</a>
                </p>
            </form>
        </div>

        <p class="auth-copyright">&copy; 2025 Healthcare Egypt. All rights reserved.</p>
    </div>
</div>

<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2rem 1rem;
    }

    .auth-container {
        width: 100%;
        max-width: 400px;
    }

    .auth-container-lg {
        max-width: 480px;
    }

    .auth-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-logo {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #4F46E5, #6366F1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        color: white;
        font-size: 1.5rem;
    }

    .auth-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
        margin: 0;
    }

    .auth-form .form-section {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .auth-form .form-section:last-of-type {
        border-bottom: none;
        padding-bottom: 0;
    }

    .form-section-title {
        font-size: 0.8125rem;
        font-weight: 600;
        color: #4F46E5;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
    }

    .auth-form .form-group {
        margin-bottom: 1rem;
    }

    .auth-form .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @@media (max-width: 480px) {
        .auth-form .form-row {
            grid-template-columns: 1fr;
        }
    }

    .auth-form .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .auth-form .form-control,
    .auth-form .form-select {
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.2s;
    }

    .auth-form .form-control:focus,
    .auth-form .form-select:focus {
        border-color: #4F46E5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .auth-form .form-control::placeholder {
        color: #94a3b8;
    }

    .auth-form .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.9375rem;
        border-radius: 8px;
        margin-top: 0.5rem;
    }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        margin-bottom: 0;
        color: #64748b;
        font-size: 0.875rem;
    }

    .auth-footer a {
        color: #4F46E5;
        font-weight: 600;
        text-decoration: none;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .auth-copyright {
        text-align: center;
        color: #94a3b8;
        font-size: 0.8125rem;
        margin-top: 1.5rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
