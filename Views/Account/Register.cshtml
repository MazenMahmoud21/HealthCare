@model RegisterDto
@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-panel overflow-hidden rounded-4 shadow-lg fade-in">
                <div class="card-header bg-transparent border-bottom-0 p-5 pb-0 text-center position-relative">
                    <!-- Decorative Background -->
                    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(180deg, rgba(15, 118, 110, 0.05) 0%, rgba(255,255,255,0) 100%); z-index: -1;"></div>
                    
                    <div class="mb-4 animate-float">
                        <div class="d-inline-block p-3 rounded-circle glass-panel bg-white shadow-sm">
                            <i class="fas fa-user-plus fa-3x text-gradient"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold display-6 mb-2">Create Account</h2>
                    <p class="text-muted lead">Join our healthcare community today</p>
                </div>
                
                <div class="card-body p-5 pt-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 border-0 shadow-sm" role="alert"></div>

                        <!-- Account Information Section -->
                        <div class="mb-5">
                            <h5 class="text-primary fw-bold border-bottom pb-2 mb-4 d-flex align-items-center">
                                <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.9rem;">1</span>
                                Account Information
                            </h5>
                            <div class="row g-4">
                                <div class="col-12">
                                    <label asp-for="Email" class="form-label fw-semibold text-muted">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope text-primary"></i></span>
                                        <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" placeholder="name@example.com" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-semibold text-muted">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-primary"></i></span>
                                        <input asp-for="Password" type="password" class="form-control bg-light border-start-0 ps-0" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold text-muted">Confirm Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-check-circle text-primary"></i></span>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-light border-start-0 ps-0" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="mb-5">
                            <h5 class="text-primary fw-bold border-bottom pb-2 mb-4 d-flex align-items-center">
                                <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.9rem;">2</span>
                                Personal Details
                            </h5>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label fw-semibold text-muted">First Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-id-card text-primary"></i></span>
                                        <input asp-for="FirstName" class="form-control bg-light border-start-0 ps-0" placeholder="John" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label fw-semibold text-muted">Last Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-id-card text-primary"></i></span>
                                        <input asp-for="LastName" class="form-control bg-light border-start-0 ps-0" placeholder="Doe" />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="DateOfBirth" class="form-label fw-semibold text-muted">Date of Birth</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-calendar-alt text-primary"></i></span>
                                        <input asp-for="DateOfBirth" type="date" class="form-control bg-light border-start-0 ps-0" />
                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Gender" class="form-label fw-semibold text-muted">Gender</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-venus-mars text-primary"></i></span>
                                        <select asp-for="Gender" class="form-select bg-light border-start-0 ps-0">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Gender" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label fw-semibold text-muted">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-phone text-primary"></i></span>
                                        <input asp-for="Phone" class="form-control bg-light border-start-0 ps-0" placeholder="+1 (555) 000-0000" />
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm hover-scale">
                                Create Account <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                            <div class="text-center">
                                <span class="text-muted">Already have an account?</span>
                                <a asp-action="Login" class="text-primary fw-bold text-decoration-none hover-scale d-inline-block ms-1">
                                    Sign In
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
