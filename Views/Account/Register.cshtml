@model RegisterDto
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="auth-page">
    <div class="auth-container auth-container-lg">
        <div class="auth-card">
            <!-- Logo/Brand -->
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-hospital"></i>
                </div>
                <h1 class="auth-title">Create your account</h1>
                <p class="auth-subtitle">Join Egypt's trusted healthcare platform</p>
            </div>

            <form asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Account Section -->
                <div class="form-section">
                    <h6 class="form-section-title">Account Information</h6>
                    
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="mazen.mahmoud@example.eg" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Personal Section -->
                <div class="form-section">
                    <h6 class="form-section-title">Personal Details</h6>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Mazen" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Mahmoud" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                            <div class="date-input-wrapper">
                                <input asp-for="DateOfBirth" type="date" class="form-control date-picker" 
                                       min="1900-01-01" 
                                       max="@DateTime.Now.ToString("yyyy-MM-dd")" 
                                       value="@DateTime.Now.AddYears(-25).ToString("yyyy-MM-dd")" />
                                <i class="fas fa-calendar-alt date-icon"></i>
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <div class="gender-selector">
                                <label class="gender-option">
                                    <input type="radio" name="Gender" value="Male" required />
                                    <span class="gender-btn">
                                        <i class="fas fa-mars"></i>
                                        <span>Male</span>
                                    </span>
                                </label>
                                <label class="gender-option">
                                    <input type="radio" name="Gender" value="Female" required />
                                    <span class="gender-btn">
                                        <i class="fas fa-venus"></i>
                                        <span>Female</span>
                                    </span>
                                </label>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="+20 10 1234 5678" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Create Account
                </button>

                <p class="auth-footer">
                    Already have an account? <a asp-action="Login">Sign in</a>
                </p>
            </form>
        </div>

        <p class="auth-copyright">&copy; 2025 Healthcare Egypt. All rights reserved.</p>
    </div>
</div>

<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2rem 1rem;
    }

    .auth-container {
        width: 100%;
        max-width: 400px;
    }

    .auth-container-lg {
        max-width: 480px;
    }

    .auth-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-logo {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #4F46E5, #6366F1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        color: white;
        font-size: 1.5rem;
    }

    .auth-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
        margin: 0;
    }

    .auth-form .form-section {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .auth-form .form-section:last-of-type {
        border-bottom: none;
        padding-bottom: 0;
    }

    .form-section-title {
        font-size: 0.8125rem;
        font-weight: 600;
        color: #4F46E5;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
    }

    .auth-form .form-group {
        margin-bottom: 1rem;
    }

    .auth-form .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @@media (max-width: 576px) {
        .auth-page {
            padding: 1rem 0.75rem;
        }

        .auth-card {
            padding: 1.5rem;
            border-radius: 12px;
        }

        .auth-form .form-row {
            grid-template-columns: 1fr;
            gap: 0;
        }

        .auth-title {
            font-size: 1.25rem;
        }

        .auth-subtitle {
            font-size: 0.875rem;
        }

        .gender-selector {
            flex-direction: row;
        }

        .gender-btn {
            padding: 0.625rem 0.75rem;
            font-size: 0.8125rem;
        }

        .gender-btn i {
            font-size: 0.875rem;
        }

        .date-input-wrapper .date-picker {
            font-size: 0.875rem;
        }

        .auth-form .form-control,
        .auth-form .form-select {
            padding: 0.625rem 0.875rem;
            font-size: 0.875rem;
        }

        .auth-logo {
            width: 48px;
            height: 48px;
            font-size: 1.25rem;
        }
    }

    .auth-form .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .auth-form .form-control,
    .auth-form .form-select {
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.2s;
        width: 100%;
    }

    .auth-form .form-control:focus,
    .auth-form .form-select:focus {
        border-color: #4F46E5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .auth-form .form-control::placeholder {
        color: #94a3b8;
    }

    /* Date Input Wrapper */
    .date-input-wrapper {
        position: relative;
    }

    .date-input-wrapper .date-picker {
        padding-right: 2.75rem;
        cursor: pointer;
        color: #374151;
    }

    .date-input-wrapper .date-picker::-webkit-calendar-picker-indicator {
        position: absolute;
        right: 0;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }

    .date-input-wrapper .date-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #4F46E5;
        pointer-events: none;
        font-size: 1rem;
    }

    /* Gender Selector */
    .gender-selector {
        display: flex;
        gap: 0.75rem;
    }

    .gender-option {
        flex: 1;
        margin: 0;
        cursor: pointer;
    }

    .gender-option input[type="radio"] {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .gender-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        background: white;
        transition: all 0.2s ease;
        font-weight: 500;
        color: #64748b;
        font-size: 0.875rem;
    }

    .gender-btn i {
        font-size: 1rem;
    }

    .gender-option input[type="radio"]:checked + .gender-btn {
        border-color: #4F46E5;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.08), rgba(99, 102, 241, 0.08));
        color: #4F46E5;
    }

    .gender-option:hover .gender-btn {
        border-color: #4F46E5;
        background: rgba(79, 70, 229, 0.04);
    }

    .gender-option input[type="radio"]:focus + .gender-btn {
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .auth-form .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.9375rem;
        border-radius: 8px;
        margin-top: 0.5rem;
    }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        margin-bottom: 0;
        color: #64748b;
        font-size: 0.875rem;
    }

    .auth-footer a {
        color: #4F46E5;
        font-weight: 600;
        text-decoration: none;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .auth-copyright {
        text-align: center;
        color: #94a3b8;
        font-size: 0.8125rem;
        margin-top: 1.5rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
