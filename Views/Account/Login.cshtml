@model LoginDto
@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <!-- Logo/Brand -->
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-hospital"></i>
                </div>
                <h1 class="auth-title">Welcome back</h1>
                <p class="auth-subtitle">Sign in to your healthcare account</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                </div>
            }

            <form asp-action="Login" method="post" class="auth-form">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="mazen.mahmoud@example.eg" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Sign In
                </button>

                <p class="auth-footer">
                    Don't have an account? <a asp-action="Register">Create one</a>
                </p>
            </form>
        </div>

        <p class="auth-copyright">&copy; 2025 Healthcare Egypt. All rights reserved.</p>
    </div>
</div>

<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2rem 1rem;
    }

    .auth-container {
        width: 100%;
        max-width: 400px;
    }

    .auth-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-logo {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #4F46E5, #6366F1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        color: white;
        font-size: 1.5rem;
    }

    .auth-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
        margin: 0;
    }

    .auth-form .form-group {
        margin-bottom: 1.25rem;
    }

    .auth-form .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .auth-form .form-control {
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.2s;
    }

    .auth-form .form-control:focus {
        border-color: #4F46E5;
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .auth-form .form-control::placeholder {
        color: #94a3b8;
    }

    .auth-form .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.9375rem;
        border-radius: 8px;
        margin-top: 0.5rem;
    }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        margin-bottom: 0;
        color: #64748b;
        font-size: 0.875rem;
    }

    .auth-footer a {
        color: #4F46E5;
        font-weight: 600;
        text-decoration: none;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .auth-copyright {
        text-align: center;
        color: #94a3b8;
        font-size: 0.8125rem;
        margin-top: 1.5rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

