@model LoginDto
@{
    ViewData["Title"] = "Welcome Back";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-10">
            <div class="glass-panel overflow-hidden rounded-4 shadow-lg">
                <div class="row g-0">
                    <!-- Left Side: Branding/Image -->
                    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-white p-5 position-relative" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
                        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: url('https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80') center/cover; opacity: 0.1;"></div>
                        
                        <!-- Animated Blobs -->
                        <div class="position-absolute top-0 start-0 w-100 h-100 overflow-hidden">
                            <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 300px; height: 300px; top: -50px; left: -50px; filter: blur(50px);"></div>
                            <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 200px; height: 200px; bottom: -50px; right: -50px; filter: blur(40px);"></div>
                        </div>

                        <div class="position-relative text-center z-1">
                            <div class="mb-4 animate-float">
                                <div class="d-inline-block p-3 rounded-circle glass-panel bg-white bg-opacity-25">
                                    <i class="fas fa-heartbeat fa-4x mb-0"></i>
                                </div>
                            </div>
                            <h2 class="fw-bold display-6 mb-3">HealthCare Plus</h2>
                            <p class="lead mb-4 opacity-75">Your health journey starts here. Secure, reliable, and always available.</p>
                        </div>
                    </div>
                    
                    <!-- Right Side: Login Form -->
                    <div class="col-md-6 bg-white p-5">
                        <div class="text-center mb-5">
                            <h3 class="fw-bold text-gradient mb-2">Welcome Back</h3>
                            <p class="text-muted">Please enter your details to sign in</p>
                        </div>

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center fade-in rounded-3 border-0 shadow-sm" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <div>@TempData["Error"]</div>
                            </div>
                        }

                        <form asp-action="Login" method="post" class="fade-in">
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold text-muted">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope text-primary"></i></span>
                                    <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" placeholder="name@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold text-muted">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-primary"></i></span>
                                    <input asp-for="Password" type="password" class="form-control bg-light border-start-0 ps-0" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm hover-scale">
                                    Sign In <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Don't have an account? 
                                    <a asp-action="Register" class="text-primary fw-bold text-decoration-none hover-scale d-inline-block">Create Account</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

