<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healthcare System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site_new.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthcareSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/healthcare-logo.svg" alt="Healthcare Logo" style="height: 35px; width: 35px;">
                    <span>Healthcare</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @{
                            var role = Context.Session.GetString("Role");
                            var isLoggedIn = !string.IsNullOrEmpty(role);
                        }

                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="AdminDashboard">
                                    <i class="fas fa-th-large me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="Index">
                                    <i class="fas fa-users me-1"></i>Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="fas fa-user-md me-1"></i>Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Index">
                                    <i class="fas fa-calendar-alt me-1"></i>Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="Index">
                                    <i class="fas fa-file-medical me-1"></i>Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="Index">
                                    <i class="fas fa-prescription me-1"></i>Prescriptions
                                </a>
                            </li>
                        }
                        else if (role == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="DoctorDashboard">
                                    <i class="fas fa-th-large me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">
                                    <i class="fas fa-calendar-check me-1"></i>My Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="Index">
                                    <i class="fas fa-users me-1"></i>Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="Index">
                                    <i class="fas fa-file-medical me-1"></i>Medical Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="Index">
                                    <i class="fas fa-prescription me-1"></i>Prescriptions
                                </a>
                            </li>
                        }
                        else if (role == "Patient")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="PatientDashboard">
                                    <i class="fas fa-th-large me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="fas fa-search me-1"></i>Find Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Create">
                                    <i class="fas fa-calendar-plus me-1"></i>Book
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="MyRecords">
                                    <i class="fas fa-file-medical me-1"></i>Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="MyPrescriptions">
                                    <i class="fas fa-prescription me-1"></i>Prescriptions
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="fas fa-user-md me-1"></i>Doctors
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @(role == "Admin" ? "Admin" : role)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (role == "Patient")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Patient" asp-action="MyProfile">
                                                <i class="fas fa-user me-2"></i>My Profile
                                            </a>
                                        </li>
                                    }
                                    else if (role == "Doctor")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Doctor" asp-action="MyProfile">
                                                <i class="fas fa-user me-2"></i>My Profile
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item ms-2 d-flex align-items-center">
                                <a class="btn btn-primary px-3" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container text-center">
            <span>&copy; 2025 Healthcare System. All rights reserved.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
