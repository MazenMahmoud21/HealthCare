<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healthcare System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthcareSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-hospital me-2"></i>Healthcare System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @{
                            var role = Context.Session.GetString("Role");
                            var isLoggedIn = !string.IsNullOrEmpty(role);
                        }

                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="AdminDashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="Index">
                                    <i class="bi bi-people me-1"></i>Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="bi bi-heart-pulse me-1"></i>Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Index">
                                    <i class="bi bi-calendar-check me-1"></i>Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="Index">
                                    <i class="bi bi-file-medical me-1"></i>Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="Index">
                                    <i class="bi bi-prescription me-1"></i>Prescriptions
                                </a>
                            </li>
                        }
                        else if (role == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="DoctorDashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">
                                    <i class="bi bi-calendar-check me-1"></i>My Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="Index">
                                    <i class="bi bi-people me-1"></i>Patients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="Index">
                                    <i class="bi bi-file-medical me-1"></i>Medical Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="Index">
                                    <i class="bi bi-prescription me-1"></i>Prescriptions
                                </a>
                            </li>
                        }
                        else if (role == "Patient")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="PatientDashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="bi bi-search me-1"></i>Find Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Create">
                                    <i class="bi bi-calendar-plus me-1"></i>Book Appointment
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MedicalRecord" asp-action="MyRecords">
                                    <i class="bi bi-file-medical me-1"></i>My Records
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Prescription" asp-action="MyPrescriptions">
                                    <i class="bi bi-prescription me-1"></i>My Prescriptions
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="bi bi-heart-pulse me-1"></i>Our Doctors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-shield-check me-1"></i>Privacy
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @(role == "Admin" ? "Administrator" : role)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (role == "Patient")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Patient" asp-action="MyProfile">
                                                <i class="bi bi-person me-2"></i>My Profile
                                            </a>
                                        </li>
                                    }
                                    else if (role == "Doctor")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Doctor" asp-action="MyProfile">
                                                <i class="bi bi-person me-2"></i>My Profile
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger" style="cursor: pointer; background: none; border: none; width: 100%; text-align: left;">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light btn-sm ms-2 px-3" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light py-3 mt-auto">
        <div class="container text-center">
            <span>&copy; 2025 Healthcare System - </span>
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a>
            <span class="mx-2">|</span>
            <span class="text-muted">Built with ASP.NET Core MVC</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
