@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-success"><i class="bi bi-heart-pulse me-2"></i>Doctor Dashboard</h2>
            <p class="text-muted">Welcome back, @ViewBag.DoctorName! Here's your schedule and patient overview.</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Appointments</h6>
                            <h2 class="mb-0">@ViewBag.TotalAppointments</h2>
                        </div>
                        <i class="bi bi-calendar-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Pending</h6>
                            <h2 class="mb-0">@ViewBag.PendingAppointments</h2>
                        </div>
                        <i class="bi bi-clock-history fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Completed</h6>
                            <h2 class="mb-0">@ViewBag.CompletedAppointments</h2>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Patients Seen</h6>
                            <h2 class="mb-0">@ViewBag.TotalPatientsSeen</h2>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Today's Appointments -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-day me-2"></i>Today's Appointments</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TodayAppointments != null && ((IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.TodayAppointments).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var appointment in (IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.TodayAppointments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@appointment.Patient?.FirstName @appointment.Patient?.LastName</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>@appointment.AppointmentDate.ToString("HH:mm")
                                            @if (!string.IsNullOrEmpty(appointment.Reason))
                                            {
                                                <span class="ms-2">- @(appointment.Reason.Length > 30 ? appointment.Reason.Substring(0, 30) + "..." : appointment.Reason)</span>
                                            }
                                        </small>
                                    </div>
                                    <div>
                                        @{
                                            var statusClass = appointment.Status switch
                                            {
                                                "Scheduled" => "bg-warning text-dark",
                                                "Completed" => "bg-success",
                                                "Cancelled" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass me-2">@appointment.Status</span>
                                        @if (appointment.Status == "Scheduled")
                                        {
                                            <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id" 
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-play-circle"></i> Start
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-calendar-check fs-1"></i>
                            <p class="mt-2">No appointments scheduled for today</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.UpcomingAppointments != null && ((IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.UpcomingAppointments).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Patient</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in (IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.UpcomingAppointments)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMM dd")</td>
                                            <td>@appointment.AppointmentDate.ToString("HH:mm")</td>
                                            <td>@appointment.Patient?.FirstName @appointment.Patient?.LastName</td>
                                            <td>
                                                <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-calendar-x fs-1"></i>
                            <p class="mt-2">No upcoming appointments</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-2">
                            <a asp-controller="Patient" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-people me-2"></i>View Patients
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-2">
                            <a asp-controller="MedicalRecord" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-file-medical me-2"></i>Medical Records
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-2">
                            <a asp-controller="Prescription" asp-action="Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-prescription me-2"></i>Prescriptions
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-2">
                            <a asp-controller="Appointment" asp-action="Calendar" class="btn btn-outline-warning w-100">
                                <i class="bi bi-calendar3 me-2"></i>My Calendar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
