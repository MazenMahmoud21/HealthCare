@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center rounded-3" style="background: transparent;">
    <!-- Animated Background Blobs -->
    <div class="position-absolute top-0 start-0 w-100 h-100" style="z-index: -1; overflow: hidden;">
        <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="position-absolute" style="width: 50%; top: -10%; left: -10%; opacity: 0.1; animation: float 6s ease-in-out infinite;">
            <path fill="#0F766E" d="M44.7,-76.4C58.9,-69.2,71.8,-59.1,81.6,-46.6C91.4,-34.1,98.1,-19.2,95.8,-5.3C93.5,8.6,82.2,21.5,70.6,32.2C59,42.9,47.1,51.4,34.8,58.6C22.5,65.8,9.8,71.7,-1.8,74.8C-13.4,77.9,-23.9,78.2,-34.7,73.8C-45.5,69.4,-56.6,60.3,-65.6,49.6C-74.6,38.9,-81.5,26.6,-83.4,13.5C-85.3,0.4,-82.2,-13.5,-74.7,-25.2C-67.2,-36.9,-55.3,-46.4,-42.9,-54.3C-30.5,-62.2,-17.6,-68.5,-3.9,-61.8L9.8,-55.1Z" transform="translate(100 100)" />
        </svg>
        <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="position-absolute" style="width: 40%; bottom: -10%; right: -10%; opacity: 0.1; animation: float 8s ease-in-out infinite reverse;">
            <path fill="#0F766E" d="M41.3,-70.5C54.4,-63.9,66.4,-55.6,75.3,-44.7C84.2,-33.8,90,-20.3,88.6,-7.3C87.2,5.7,78.6,18.2,68.9,29.1C59.2,40,48.4,49.3,36.6,56.3C24.8,63.3,12,68,-0.6,69C-13.2,70,-26.1,67.3,-37.6,60.1C-49.1,52.9,-59.2,41.2,-66.8,28.1C-74.4,15,-79.5,0.5,-77.3,-12.8C-75.1,-26.1,-65.6,-38.2,-54.2,-47.6C-42.8,-57,-29.5,-63.7,-16.3,-66.5C-3.1,-69.3,10,-68.2,23.1,-67.1L36.2,-66Z" transform="translate(100 100)" />
        </svg>
    </div>

    <div class="col-md-8 p-lg-5 mx-auto my-5 fade-in position-relative" style="z-index: 1;">
        <div class="mb-4 animate-float">
            <div class="d-inline-block p-3 rounded-circle glass-panel shadow-sm">
                <i class="fas fa-heartbeat fa-4x text-gradient"></i>
            </div>
        </div>
        <h1 class="display-3 fw-bold mb-3">Healthcare <span class="text-gradient">Reimagined</span></h1>
        <p class="lead fw-normal text-muted mb-5" style="font-size: 1.25rem;">
            Experience the future of medical management. Seamless appointments, secure records, and world-class care at your fingertips.
        </p>
        
        @if (Context.Session.GetString("UserId") == null)
        {
            <div class="d-flex gap-3 justify-content-center">
                <a class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-sm hover-scale" asp-controller="Account" asp-action="Register">
                    Get Started <i class="fas fa-arrow-right ms-2"></i>
                </a>
                <a class="btn btn-outline-primary btn-lg px-5 py-3 rounded-pill shadow-sm hover-scale glass-panel border-0" asp-controller="Account" asp-action="Login">
                    Sign In
                </a>
            </div>
        }
        else
        {
            <a class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-sm hover-scale" asp-controller="Appointment" asp-action="Create">
                Book Appointment <i class="fas fa-calendar-plus ms-2"></i>
            </a>
        }
    </div>
</div>

<!-- Features Section -->
<div class="container px-4 py-5" id="features">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Why Choose Us?</h2>
        <p class="lead text-muted">Comprehensive care management for everyone.</p>
    </div>
    
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
        <div class="col">
            <div class="glass-card h-100 p-4 text-center hover-scale">
                <div class="icon mb-4 text-primary">
                    <i class="fas fa-user-md fa-3x"></i>
                </div>
                <h3 class="fs-2 mb-3">Expert Doctors</h3>
                <p class="text-muted mb-4">Access to a network of top-tier medical professionals across various specializations.</p>
                <a href="#" class="btn btn-link text-decoration-none stretched-link">
                    Find a doctor <i class="fas fa-chevron-right small ms-1"></i>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="glass-card h-100 p-4 text-center hover-scale">
                <div class="icon mb-4 text-primary">
                    <i class="fas fa-calendar-check fa-3x"></i>
                </div>
                <h3 class="fs-2 mb-3">Easy Scheduling</h3>
                <p class="text-muted mb-4">Book, reschedule, or cancel appointments instantly with our real-time calendar system.</p>
                <a href="#" class="btn btn-link text-decoration-none stretched-link">
                    View calendar <i class="fas fa-chevron-right small ms-1"></i>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="glass-card h-100 p-4 text-center hover-scale">
                <div class="icon mb-4 text-primary">
                    <i class="fas fa-file-medical fa-3x"></i>
                </div>
                <h3 class="fs-2 mb-3">Digital Records</h3>
                <p class="text-muted mb-4">Securely store and access your medical history, prescriptions, and lab results anywhere.</p>
                <a href="#" class="btn btn-link text-decoration-none stretched-link">
                    Learn more <i class="fas fa-chevron-right small ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="py-5 mt-5" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="glass-panel bg-white bg-opacity-10 p-4 rounded-3 text-white">
                    <h2 class="display-4 fw-bold mb-0">10k+</h2>
                    <p class="h5 opacity-75 mt-2">Happy Patients</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-panel bg-white bg-opacity-10 p-4 rounded-3 text-white">
                    <h2 class="display-4 fw-bold mb-0">500+</h2>
                    <p class="h5 opacity-75 mt-2">Expert Doctors</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-panel bg-white bg-opacity-10 p-4 rounded-3 text-white">
                    <h2 class="display-4 fw-bold mb-0">24/7</h2>
                    <p class="h5 opacity-75 mt-2">Support Available</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-panel bg-white bg-opacity-10 p-4 rounded-3 text-white">
                    <h2 class="display-4 fw-bold mb-0">99%</h2>
                    <p class="h5 opacity-75 mt-2">Satisfaction Rate</p>
                </div>
            </div>
        </div>
    </div>
</div>