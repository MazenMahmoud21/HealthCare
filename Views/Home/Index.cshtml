                            <div class="floating-icon floating-1">
                                <i class="fas fa-stethoscope"></i>
                            </div>
                            <div class="floating-icon floating-2">
                                <i class="fas fa-user-md"></i>
                            </div>
                            <div class="floating-icon floating-3">
                                <i class="fas fa-pills"></i>
                            </div>
                            <div class="floating-icon floating-4">
                                <i class="fas fa-syringe"></i>
                            </div>
                            <div class="floating-icon floating-5">
                                <i class="fas fa-notes-medical"></i>
                            </div>
                            <div class="floating-icon floating-6">
                                <i class="fas fa-ambulance"></i>
                            </div>
                            
                            <!-- Decorative shapes -->
                            <div class="deco-circle deco-1"></div>
                            <div class="deco-circle deco-2"></div>
                            <div class="deco-circle deco-3"></div>
                            <div class="deco-ring deco-4"></div>
                            <div class="deco-ring deco-5"></div>
                            
                            <!-- Pulse rings -->
                            <div class="pulse-ring pulse-1"></div>
                            <div class="pulse-ring pulse-2"></div>
