@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title mb-1">Admin Dashboard</h1>
            <p class="page-subtitle mb-0">System overview and management controls.</p>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a class="btn btn-outline-primary" asp-controller="Patient" asp-action="Create">
                <i class="fas fa-user-plus me-1"></i> Add Patient
            </a>
            <a class="btn btn-primary" asp-controller="Doctor" asp-action="Create">
                <i class="fas fa-user-md me-1"></i> Add Doctor
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Total Patients</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalPatients</h3>
                    </div>
                    <div class="stat-icon" style="background: #E0E7FF; color: #4F46E5;">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Patient" asp-action="Index" class="text-decoration-none small">
                        Manage <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Total Doctors</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalDoctors</h3>
                    </div>
                    <div class="stat-icon" style="background: #D1FAE5; color: #059669;">
                        <i class="fas fa-user-md"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Doctor" asp-action="Index" class="text-decoration-none small">
                        Manage <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Appointments</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalAppointments</h3>
                    </div>
                    <div class="stat-icon" style="background: #CFFAFE; color: #0891B2;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Appointment" asp-action="Index" class="text-decoration-none small">
                        View all <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Pending</p>
                        <h3 class="stat-value mb-0">@ViewBag.PendingAppointments</h3>
                    </div>
                    <div class="stat-icon" style="background: #FEF3C7; color: #D97706;">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <span class="small text-muted">Scheduled visits</span>
                </div>
            </div>
        </div>
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Completed</p>
                        <h3 class="stat-value mb-0">@ViewBag.CompletedAppointments</h3>
                    </div>
                    <div class="stat-icon" style="background: #D1FAE5; color: #059669;">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <span class="small text-muted">Finished visits</span>
                </div>
            </div>
        </div>
        <div class="col-6 col-xl-2 col-lg-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Records</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalMedicalRecords</h3>
                    </div>
                    <div class="stat-icon" style="background: #F3E8FF; color: #7C3AED;">
                        <i class="fas fa-file-medical"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="MedicalRecord" asp-action="Index" class="text-decoration-none small">
                        View all <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-header">
            <span class="card-title"><i class="fas fa-bolt me-2 text-warning"></i>Quick Actions</span>
        </div>
        <div class="card-body">
            <div class="row g-2">
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="Patient" asp-action="Create" class="btn btn-outline-primary w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-user-plus mb-2"></i>
                        <span class="small">Add Patient</span>
                    </a>
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="Doctor" asp-action="Create" class="btn btn-outline-success w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-user-md mb-2"></i>
                        <span class="small">Add Doctor</span>
                    </a>
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-info w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-calendar-plus mb-2"></i>
                        <span class="small">New Appointment</span>
                    </a>
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="Appointment" asp-action="Calendar" class="btn btn-outline-warning w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-calendar-alt mb-2"></i>
                        <span class="small">Calendar</span>
                    </a>
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="MedicalRecord" asp-action="Index" class="btn btn-outline-secondary w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-file-medical mb-2"></i>
                        <span class="small">Records</span>
                    </a>
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    <a asp-controller="Prescription" asp-action="Index" class="btn btn-outline-secondary w-100 h-100 py-3 d-flex flex-column align-items-center">
                        <i class="fas fa-prescription mb-2"></i>
                        <span class="small">Prescriptions</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments Table -->
    <div class="card">
        <div class="card-header">
            <span class="card-title"><i class="fas fa-history me-2 text-muted"></i>Recent Appointments</span>
            <a asp-controller="Appointment" asp-action="Index" class="btn btn-sm btn-primary">View All</a>
        </div>
        <div class="card-body p-0">
            @if (ViewBag.RecentAppointments != null && ((IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.RecentAppointments).Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in (IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.RecentAppointments)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-medium">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@appointment.AppointmentDate.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-2" style="background: #E0E7FF; color: #4F46E5;">
                                                @appointment.Patient?.FirstName?.Substring(0,1)@appointment.Patient?.LastName?.Substring(0,1)
                                            </div>
                                            <span>@appointment.Patient?.FirstName @appointment.Patient?.LastName</span>
                                        </div>
                                    </td>
                                    <td>Dr. @appointment.Doctor?.FirstName @appointment.Doctor?.LastName</td>
                                    <td>
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;">
                                            @(appointment.Reason?.Length > 30 ? appointment.Reason.Substring(0, 30) + "..." : appointment.Reason ?? "â€”")
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = appointment.Status switch
                                            {
                                                "Scheduled" => "status-scheduled",
                                                "Completed" => "status-completed",
                                                "Cancelled" => "status-cancelled",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@appointment.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id" 
                                           class="btn btn-sm btn-ghost" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Appointment" asp-action="Edit" asp-route-id="@appointment.Id" 
                                           class="btn btn-sm btn-ghost" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state py-5">
                    <i class="fas fa-calendar-times"></i>
                    <h5>No Appointments Found</h5>
                    <p>Create your first appointment to get started.</p>
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i> Create Appointment
                    </a>
                </div>
            }
        </div>
    </div>
</div>
