@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="page-title mb-1">Welcome back, @ViewBag.PatientName</h1>
            <p class="page-subtitle mb-0">Here's your health overview for today.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="Appointment" asp-action="Create">
                <i class="fas fa-plus me-1"></i> Book Appointment
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Total Appointments</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalAppointments</h3>
                    </div>
                    <div class="stat-icon" style="background: #E0E7FF; color: #4F46E5;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Appointment" asp-action="MyAppointments" class="text-decoration-none small">
                        View all <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Medical Records</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalMedicalRecords</h3>
                    </div>
                    <div class="stat-icon" style="background: #D1FAE5; color: #059669;">
                        <i class="fas fa-file-medical"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="MedicalRecord" asp-action="MyRecords" class="text-decoration-none small">
                        View all <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Prescriptions</p>
                        <h3 class="stat-value mb-0">@ViewBag.TotalPrescriptions</h3>
                    </div>
                    <div class="stat-icon" style="background: #CFFAFE; color: #0891B2;">
                        <i class="fas fa-prescription-bottle-alt"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Prescription" asp-action="MyPrescriptions" class="text-decoration-none small">
                        View all <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="stat-label mb-1">Find Doctors</p>
                        <h3 class="stat-value mb-0"><i class="fas fa-search" style="font-size: 1.5rem;"></i></h3>
                    </div>
                    <div class="stat-icon" style="background: #FEF3C7; color: #D97706;">
                        <i class="fas fa-user-md"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a asp-controller="Doctor" asp-action="Index" class="text-decoration-none small">
                        Browse <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Upcoming Appointments -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <span class="card-title"><i class="fas fa-calendar-alt me-2 text-primary"></i>Upcoming Appointments</span>
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.UpcomingAppointments != null && ((IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.UpcomingAppointments).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var appointment in (IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.UpcomingAppointments)
                            {
                                <div class="list-group-item py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex">
                                            <div class="avatar me-3" style="background: #E0E7FF; color: #4F46E5;">
                                                @appointment.Doctor?.FirstName?.Substring(0,1)@appointment.Doctor?.LastName?.Substring(0,1)
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-semibold">Dr. @appointment.Doctor?.FirstName @appointment.Doctor?.LastName</h6>
                                                <p class="mb-1 small text-muted">
                                                    <i class="fas fa-calendar me-1"></i>@appointment.AppointmentDate.ToString("MMM dd, yyyy")
                                                    <span class="mx-2">•</span>
                                                    <i class="fas fa-clock me-1"></i>@appointment.AppointmentDate.ToString("hh:mm tt")
                                                </p>
                                                @if (!string.IsNullOrEmpty(appointment.Reason))
                                                {
                                                    <small class="text-muted">@(appointment.Reason.Length > 40 ? appointment.Reason.Substring(0, 40) + "..." : appointment.Reason)</small>
                                                }
                                            </div>
                                        </div>
                                        <span class="badge status-scheduled">@appointment.Status</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fas fa-calendar-plus"></i>
                            <h5>No Upcoming Appointments</h5>
                            <p>Schedule your next visit with a doctor.</p>
                            <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus me-1"></i> Book Appointment
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Medical Records -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <span class="card-title"><i class="fas fa-file-medical me-2 text-success"></i>Recent Medical Records</span>
                    <a asp-controller="MedicalRecord" asp-action="MyRecords" class="btn btn-sm btn-ghost">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.MedicalRecords != null && ((IEnumerable<HealthcareSystem.Models.MedicalRecord>)ViewBag.MedicalRecords).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var record in (IEnumerable<HealthcareSystem.Models.MedicalRecord>)ViewBag.MedicalRecords)
                            {
                                <a asp-controller="MedicalRecord" asp-action="Details" asp-route-id="@record.Id" 
                                   class="list-group-item list-group-item-action py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-3" style="background: #D1FAE5; color: #059669;">
                                                <i class="fas fa-notes-medical"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-medium">@record.VisitDate.ToString("MMM dd, yyyy")</h6>
                                                <small class="text-muted">Dr. @record.Doctor?.FirstName @record.Doctor?.LastName</small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-primary d-block">@(record.Diagnosis?.Length > 20 ? record.Diagnosis.Substring(0, 20) + "..." : record.Diagnosis)</small>
                                            <i class="fas fa-chevron-right text-muted small"></i>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fas fa-folder-open"></i>
                            <h5>No Medical Records</h5>
                            <p>Your medical records will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Past Appointments -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <span class="card-title"><i class="fas fa-history me-2 text-muted"></i>Past Appointments</span>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.PastAppointments != null && ((IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.PastAppointments).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Doctor</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in (IEnumerable<HealthcareSystem.Models.Appointment>)ViewBag.PastAppointments)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                            <td>Dr. @appointment.Doctor?.FirstName @appointment.Doctor?.LastName</td>
                                            <td>
                                                @{
                                                    var statusClass = appointment.Status switch
                                                    {
                                                        "Completed" => "status-completed",
                                                        "Cancelled" => "status-cancelled",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@appointment.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fas fa-calendar-times"></i>
                            <h5>No Past Appointments</h5>
                            <p>Your appointment history will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Prescriptions -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <span class="card-title"><i class="fas fa-prescription me-2 text-info"></i>Recent Prescriptions</span>
                    <a asp-controller="Prescription" asp-action="MyPrescriptions" class="btn btn-sm btn-ghost">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.Prescriptions != null && ((IEnumerable<HealthcareSystem.Models.Prescription>)ViewBag.Prescriptions).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var prescription in (IEnumerable<HealthcareSystem.Models.Prescription>)ViewBag.Prescriptions)
                            {
                                <a asp-controller="Prescription" asp-action="Details" asp-route-id="@prescription.Id" 
                                   class="list-group-item list-group-item-action py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-3" style="background: #CFFAFE; color: #0891B2;">
                                                <i class="fas fa-pills"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-medium">@prescription.MedicineName</h6>
                                                <small class="text-muted">@prescription.Dosage • @prescription.Duration</small>
                                            </div>
                                        </div>
                                        <small class="text-muted">@prescription.PrescriptionDate.ToString("MMM dd")</small>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fas fa-prescription-bottle"></i>
                            <h5>No Prescriptions</h5>
                            <p>Your prescriptions will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mt-3">
        <div class="card-header">
            <span class="card-title"><i class="fas fa-bolt me-2 text-warning"></i>Quick Actions</span>
        </div>
        <div class="card-body">
            <div class="row g-2">
                <div class="col-6 col-md-3">
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary w-100">
                        <i class="fas fa-calendar-plus me-2"></i>Book Appointment
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-outline-primary w-100">
                        <i class="fas fa-search me-2"></i>Find Doctor
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="MedicalRecord" asp-action="MyRecords" class="btn btn-outline-primary w-100">
                        <i class="fas fa-file-medical me-2"></i>My Records
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Patient" asp-action="Edit" asp-route-id="@ViewBag.Patient?.Id" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-user-edit me-2"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
